<!-- res/layout/list_item_layout.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/flagImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Знаменитость" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Имя знаменитости"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/moneyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сумма денег"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />
        <ImageButton
            android:id="@+id/openBrowserButton"
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/bird_up"
        android:contentDescription="Открыть в браузере" />
    </LinearLayout>
</LinearLayout>
